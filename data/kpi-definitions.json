{
  "kpiDefinitions": [
    {
      "id": "data-availability",
      "name": "Disponibilidad de Datos",
      "category": "Calidad de Datos",
      "subcategory": "Publicación",
      "description": "Porcentaje de conjuntos de datos requeridos que están publicados",
      "longDescription": "Este indicador mide la proporción de conjuntos de datos que deben estar disponibles según la normativa de transparencia activa y que efectivamente han sido publicados en el portal.",
      "calculationMethod": "(conjuntos_de_datos_publicados / conjuntos_de_datos_requeridos) * 100",
      "unit": "porcentaje",
      "targetValue": 100,
      "warningThreshold": 90,
      "criticalThreshold": 80,
      "measurementFrequency": "diaria",
      "dataSource": "sistema_interno",
      "aaipAlignment": {
        "itaIndex": true,
        "transparencyCategory": "divulgación_activa",
        "evaluationMethod": "conteo_de_conjuntos_de_datos"
      },
      "privacyCompliant": true,
      "visualization": {
        "type": "gauge",
        "colorScheme": "green_to_red",
        "displayFormat": "percentage"
      },
      "historicalTracking": true,
      "trendAnalysis": true
    },
    {
      "id": "update-timeliness",
      "name": "Actualización Oportuna",
      "category": "Calidad de Datos",
      "subcategory": "Temporalidad",
      "description": "Porcentaje de datos actualizados según el cronograma establecido",
      "longDescription": "Mide la puntualidad en la actualización de los datos según los plazos establecidos por la normativa de transparencia.",
      "calculationMethod": "(actualizaciones_a_tiempo / total_actualizaciones_requeridas) * 100",
      "unit": "porcentaje",
      "targetValue": 95,
      "warningThreshold": 85,
      "criticalThreshold": 75,
      "measurementFrequency": "semanal",
      "dataSource": "sistema_interno",
      "aaipAlignment": {
        "itaIndex": true,
        "transparencyCategory": "puntualidad",
        "evaluationMethod": "seguimiento_de_cronogramas"
      },
      "privacyCompliant": true,
      "visualization": {
        "type": "bar_chart",
        "colorScheme": "blue_gradient",
        "displayFormat": "percentage"
      },
      "historicalTracking": true,
      "trendAnalysis": true
    },
    {
      "id": "data-completeness",
      "name": "Integridad de Datos",
      "category": "Calidad de Datos",
      "subcategory": "Precisión",
      "description": "Porcentaje de campos requeridos completos en los conjuntos de datos",
      "longDescription": "Evalúa la completitud de la información en los conjuntos de datos publicados, asegurando que todos los campos requeridos estén debidamente llenos.",
      "calculationMethod": "(campos_completos / campos_requeridos_totales) * 100",
      "unit": "porcentaje",
      "targetValue": 98,
      "warningThreshold": 90,
      "criticalThreshold": 80,
      "measurementFrequency": "diaria",
      "dataSource": "sistema_interno",
      "aaipAlignment": {
        "itaIndex": true,
        "transparencyCategory": "calidad_de_datos",
        "evaluationMethod": "análisis_de_campos"
      },
      "privacyCompliant": true,
      "visualization": {
        "type": "line_chart",
        "colorScheme": "purple_gradient",
        "displayFormat": "percentage"
      },
      "historicalTracking": true,
      "trendAnalysis": true
    },
    {
      "id": "accessibility-compliance",
