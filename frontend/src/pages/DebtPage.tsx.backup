            <p className="text-gray-600 dark:text-gray-400">Cargando datos de deuda‚Ä¶</p>
          </div>
        </div>
      )}

      {error && (
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
